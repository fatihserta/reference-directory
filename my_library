@article{kudo_spatial_2018,
	title = {Spatial distribution of dissolved methane and its source in the western {Arctic} {Ocean}},
	volume = {74},
	issn = {1573-868X},
	url = {https://doi.org/10.1007/s10872-017-0460-y},
	doi = {10.1007/s10872-017-0460-y},
	abstract = {Recent Arctic warming and decreasing sea-ice can promote the release of methane (CH4), a greenhouse gas, from the Arctic Ocean, thereby providing a strong climate feedback. However, the dynamics of dissolved CH4 in the Arctic Ocean remain uncertain, especially in western areas. This report describes the horizontal and vertical distributions of concentration and stable carbon isotope ratio (Œ¥13C value) of CH4 in the western Arctic Ocean. Surface layer samples used for this study were supersaturated with CH4 in comparison to the atmosphere. Especially high CH4 concentrations (up to 10.3¬†nmol¬†kg‚àí1) were observed at stations in the continental shelf area. At the bottom layer of the shelf stations, the CH4 concentration was higher (up to 55.9¬†nmol¬†kg‚àí1). Its Œ¥13C value was lower (down to ‚àí¬†63.8‚Ä∞) than in the surface layer, which suggests that CH4 in the shelf water is produced mainly by methanogens in sediment. At deeper stations in the Canada Basin (seafloor¬†{\textgreater}¬†300¬†m depth), the maxima of CH4 concentration were detected at depths of 10‚Äì50¬†m and 100‚Äì200¬†m, although Œ¥13C values were lowest at 50¬†m depth. The shallower CH4 maximum coincided with the DO maximum, suggesting CH4 production by plankton activity or sinking particles. The deeper CH4 maximum corresponded to the nutrient maximum, suggesting horizontal advection of shelf water from the coastal shelf area. From the results, we were able to confirm that the dynamics of dissolved CH4 in the western Arctic Ocean in summer 2012 varied with area and depth.},
	language = {en},
	number = {3},
