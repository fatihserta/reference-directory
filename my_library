@article{kohler_anthropogenic_2020,
	title = {Anthropogenic {CO2} of {High} {Emission} {Scenario} {Compensated} {After} 3500 {Years} of {Ocean} {Alkalinization} {With} an {Annually} {Constant} {Dissolution} of 5 {Pg} of {Olivine}},
