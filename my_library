@incollection{murrell_aerobic_2010,
	title = {The {Aerobic} {Methane} {Oxidizing} {Bacteria} ({Methanotrophs})},
	copyright = {¬©2010 Springer-Verlag Berlin Heidelberg},
	isbn = {978-3-540-77584-3 978-3-540-77587-4},
	url = {http://link.springer.com/referenceworkentry/10.1007/978-3-540-77587-4_143},
	abstract = {Aerobic methane oxidizing bacteria (methanotrophs) have the unique ability to grow on methane as their sole source of carbon and energy. They are ubiquitous in the environment and play a major role in removal from the biosphere of the greenhouse gas methane before it is released into the atmosphere. Methanotrophs can be divided into two groups: the Type I methanotrophs and the Type II methanotrophs. Recently however, extremely thermophilic, acidophilic methanotrophs from the phylum Verrucomicrobia have also been isolated, thus expanding both the taxonomic diversity and physiological range of aerobic methanotrophy. Methanotrophs were until recently regarded as obligate organisms, only growing on one-carbon compounds, but the discovery of the facultative methanotroph Methylocella silvestris has changed this view. The methanotrophs can co-oxidize a considerable number of organic compounds and also have considerable potential in biotechnology. , Abstract: Aerobic methane oxidizing bacteria (methanotrophs) have the unique ability to grow on methane as their sole source of carbon and energy. They are ubiquitous in the environment and play a major role in removal from the biosphere of the greenhouse gas methane before it is released into the atmosphere. Methanotrophs can be divided into two groups: the Type I methanotrophs and the Type II methanotrophs. Recently however, extremely thermophilic, acidophilic methanotrophs from the phylum Verrucomicrobia have also been isolated, thus expanding both the taxonomic diversity and physiological range of aerobic methanotrophy. Methanotrophs were until recently regarded as obligate organisms, only growing on one-carbon compounds, but the discovery of the facultative methanotroph Methylocella silvestris has changed this view. The methanotrophs can co-oxidize a considerable number of organic compounds and also have considerable potential in biotechnology.},
	language = {en},
	urldate = {2017-04-12},
	booktitle = {Handbook of {Hydrocarbon} and {Lipid} {Microbiology}},
	publisher = {Springer Berlin Heidelberg},
	author = {Murrell, J. C.},
	editor = {Timmis, Kenneth N.},
