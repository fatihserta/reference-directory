@article{kluger_untargeted_2014,
	title = {Untargeted {Profiling} of {Tracer}-{Derived} {Metabolites} {Using} {Stable} {Isotopic} {Labeling} and {Fast} {Polarity}-{Switching} {LC}‚Äì{ESI}-{HRMS}},
	volume = {86},
	issn = {0003-2700},
	url = {https://doi.org/10.1021/ac503290j},
