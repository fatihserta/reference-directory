@article{robador_nanocalorimetric_2016,
	title = {Nanocalorimetric {Characterization} of {Microbial} {Activity} in {Deep} {Subsurface} {Oceanic} {Crustal} {Fluids}},
	volume = {7},
	issn = {1664-302X},
	url = {https://www.frontiersin.org/articles/10.3389/fmicb.2016.00454/full},
