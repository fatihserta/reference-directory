@article{knapp_methane_2007,
	title = {Methane monooxygenase gene expression mediated by methanobactin in the presence of mineral copper sources},
	volume = {104},
	copyright = {¬© 2007 by The National Academy of Sciences of the USA.                    Freely available online through the PNAS open access option.},
