@article{parker_effect_2012,
	title = {The effect of inorganic nitrogen speciation on primary production in the {San} {Francisco} {Estuary}},
	volume = {104-105},
	issn = {0272-7714},
	url = {http://www.sciencedirect.com/science/article/pii/S027277141200114X},
