@article{beaulieu_where_2015,
	series = {Exploring {New} {Frontiers} in {Deep}-{Sea} {Research}: {In} {Honor} and {Memory} of {Peter} {A}. {Rona}},
	title = {Where are the undiscovered hydrothermal vents on oceanic spreading ridges?},
