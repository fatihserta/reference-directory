@article{tynan_physical_2016,
	series = {Impacts of surface ocean acidification in polar seas and globally: a field-based approach},
	title = {Physical and biogeochemical controls on the variability in surface {pH} and calcium carbonate saturation states in the {Atlantic} sectors of the {Arctic} and {Southern} {Oceans}},
	volume = {127},
	issn = {0967-0645},
	url = {http://www.sciencedirect.com/science/article/pii/S0967064516000126},
	doi = {10.1016/j.dsr2.2016.01.001},
	abstract = {Polar oceans are particularly vulnerable to ocean acidification due to their low temperatures and reduced buffering capacity, and are expected to experience extensive low pH conditions and reduced carbonate mineral saturations states (Œ©) in the near future. However, the impact of anthropogenic CO2 on pH and Œ© will vary regionally between and across the Arctic and Southern Oceans. Here we investigate the carbonate chemistry in the Atlantic sector of two polar oceans, the Nordic Seas and Barents Sea in the Arctic Ocean, and the Scotia and Weddell Seas in the Southern Ocean, to determine the physical and biogeochemical processes that control surface pH and Œ©. High-resolution observations showed large gradients in surface pH (0.10‚Äì0.30) and aragonite saturation state (Œ©ar) (0.2‚Äì1.0) over small spatial scales, and these were particularly strong in sea-ice covered areas (up to 0.45 in pH and 2.0 in Œ©ar). In the Arctic, sea-ice melt facilitated bloom initiation in light-limited and iron replete (dFe{\textgreater}0.2nM) regions, such as the Fram Strait, resulting in high pH (8.45) and Œ©ar (3.0) along the sea-ice edge. In contrast, accumulation of dissolved inorganic carbon derived from organic carbon mineralisation under the ice resulted in low pH (8.05) and Œ©ar (1.1) in areas where thick ice persisted. In the Southern Ocean, sea-ice retreat resulted in bloom formation only where terrestrial inputs supplied sufficient iron (dFe{\textgreater}0.2nM), such as in the vicinity of the South Sandwich Islands where enhanced pH (8.3) and Œ©ar (2.3) were primarily due to biological production. In contrast, in the adjacent Weddell Sea, weak biological uptake of CO2 due to low iron concentrations (dFe{\textless}0.2nM) resulted in low pH (8.1) and Œ©ar (1.6). The large spatial variability in both polar oceans highlights the need for spatially resolved surface data of carbonate chemistry variables but also nutrients (including iron) in order to accurately elucidate the large gradients experienced by marine organisms and to understand their response to increased CO2 in the future.},
	urldate = {2019-05-20},
	journal = {Deep Sea Research Part II: Topical Studies in Oceanography},
