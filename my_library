@article{fadeev_microbial_2018,
	title = {Microbial communities in the {East} and {West} {Fram} {Strait} during sea-ice melting season},
	volume = {5},
	issn = {2296-7745},
	url = {https://www.frontiersin.org/articles/10.3389/fmars.2018.00429/abstract},
