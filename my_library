@article{steen_analytical_2020,
	title = {Analytical and {Computational} {Advances}, {Opportunities}, and {Challenges} in {Marine} {Organic} {Biogeochemistry} in an {Era} of ‚Äú{Omics}‚Äù},
	volume = {7},
	issn = {2296-7745},
	url = {https://www.frontiersin.org/articles/10.3389/fmars.2020.00718/full},
	doi = {10.3389/fmars.2020.00718},
	abstract = {Advances in sampling tools, analytical methods and data handling capabilities have been fundamental to the growth of marine organic biogeochemistry over the past four decades. There has always been a strong feedback between analytical advances and scientific advances. However, whereas advances in analytical technology were often the driving force that made possible progress in elucidating the sources and fate of organic matter in the ocean in the first decades of marine organic biogeochemistry, today process-based scientific questions should drive analytical developments. There are several paradigm shifts and challenges for the future that are related to the intersection between analytical progress and scientific evolution. Untargeted ‚Äúmolecular headhunting‚Äù for its own sake is now being subsumed into process-driven targeted investigations that ask new questions and thus require new analytical capabilities. However, there are still major gaps in characterizing the chemical composition and biochemical behavior of macromolecules. Field-based measurements are now routinely complemented by controlled laboratory experiments and in-situ rate measurements of key biogeochemical processes. And finally, the multidisciplinary investigations that are becoming more common generate large and diverse datasets, requiring innovative computational tools to integrate often disparate data sets, including better global coverage and mapping. Here, we compile examples of developments in analytical methods that have made possible transformative advances over the past decade, and we project some challenges and opportunities for the future to insure continued progress in understanding the cycling of organic carbon in the ocean.},
	language = {English},
	urldate = {2020-12-30},
	journal = {Frontiers in Marine Science},
	author = {Steen, Andrew D. and Kusch, Stephanie and Abdulla, Hussain A. and Cakiƒá, Nevenka and Coffinet, Sarah and Dittmar, Thorsten and Fulton, James M. and Galy, Valier and Hinrichs, Kai-Uwe and Ingalls, Anitra E. and Koch, Boris P. and Kujawinski, Elizabeth and Liu, Zhanfei and Osterholz, Helena and Rush, Darci and Seidel, Michael and Sep√∫lveda, Julio and Wakeham, Stuart G.},
