@article{cooper_history_2022,
	title = {A {History} of {Molecular} {Level} {Analysis} of {Natural} {Organic} {Matter} by {FTICR} {Mass} {Spectrometry} and {The} {Paradigm} {Shift} in {Organic} {Geochemistry}},
