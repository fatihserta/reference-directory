@article{li_proposed_2016,
	title = {Proposed {Guidelines} for {Solid} {Phase} {Extraction} of {Suwannee} {River} {Dissolved} {Organic} {Matter}},
	volume = {88},
	issn = {0003-2700},
	url = {https://doi.org/10.1021/acs.analchem.5b04501},
