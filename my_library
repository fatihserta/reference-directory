@article{molinaro_grammatical_2011,
	title = {Grammatical agreement processing in reading: {ERP} findings and future directions},
	volume = {47},
	issn = {0010-9452},
	shorttitle = {Grammatical agreement processing in reading},
	url = {http://www.sciencedirect.com/science/article/pii/S0010945211000591},
	doi = {10.1016/j.cortex.2011.02.019},
	abstract = {In the domain of written sentence comprehension, the computation of agreement dependencies is generally considered as a form-driven processing routine whose domain is syntactic in nature. In the present review we discuss the main findings emerging in the Event-Related Potential (ERP) literature on sentence comprehension, focusing on the different dimensions of agreement patterns (features, values, constituents involved and language): Agreement mismatches usually evoke a biphasic electrophysiological pattern (Left Anterior Negativity ‚Äì LAN, 300‚Äì450msec and P600 after 500msec). This ERP pattern is assumed to reflect rule-based computations sensitive to formal (inflectional) covariations of related words (trigger‚Äìtarget). Here we claim that agreement processing is sensitive to both the type of feature involved and the constituents that express the agreement dependency. More specifically, LAN could reflect violation of expectancy (elicited by the trigger) for the target functional morphology; later, trigger and target are structurally integrated at the sentence level (earlyP600). However, morphosyntactic information could trigger the activation of higher-level representations that are not strictly syntactic in nature. The recruitment of this additional non-syntactic information (mirrored by N400-like effects) indicates that rule-based computations of agreement dependencies are not blind to non-syntactic information but are often recruited to establish sentence-level relations.},
	language = {en},
	number = {8},
	urldate = {2020-09-08},
	journal = {Cortex},
	author = {Molinaro, Nicola and Barber, Horacio A. and Carreiras, Manuel},
	month = sep,
	year = {2011},
	note = {Number: 8},
	keywords = {LAN, P600, N400, Agreement comprehension, ERPs},
	pages = {908--930},
