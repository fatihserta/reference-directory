@article{kim_graphical_2003,
	title = {Graphical {Method} for {Analysis} of {Ultrahigh}-{Resolution} {Broadband} {Mass} {Spectra} of {Natural} {Organic} {Matter}, the {Van} {Krevelen} {Diagram}},
