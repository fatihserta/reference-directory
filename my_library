@article{granskog_distributions_2011,
	series = {The {Hudson} {Bay} {System}},
	title = {Distributions of runoff, sea-ice melt and brine using Œ¥{18O} and salinity data ‚Äî {A} new view on freshwater cycling in {Hudson} {Bay}},
