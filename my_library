	title = {Terrigenous organic matter sources and reactivity in the {North} {Atlantic} {Ocean} and a comparison to the {Arctic} and {Pacific} oceans},
	volume = {100},
	issn = {03044203},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S030442030500191X},
