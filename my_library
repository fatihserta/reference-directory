@article{wunsch_fluorescence_2015,
	title = {Fluorescence {Quantum} {Yields} of {Natural} {Organic} {Matter} and {Organic} {Compounds}: {Implications} for the {Fluorescence}-based {Interpretation} of {Organic} {Matter} {Composition}},
