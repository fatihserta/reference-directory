@article{romano_exo-metabolome_2014,
	title = {Exo-{Metabolome} of {Pseudovibrio} sp. {FO}-{BEG1} {Analyzed} by {Ultra}-{High} {Resolution} {Mass} {Spectrometry} and the {Effect} of {Phosphate} {Limitation}},
