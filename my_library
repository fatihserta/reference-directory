@article{rasse_evaluating_2017,
	title = {Evaluating {Optical} {Proxies} of {Particulate} {Organic} {Carbon} across the {Surface} {Atlantic} {Ocean}},
	volume = {4},
	issn = {2296-7745},
	url = {https://www.frontiersin.org/article/10.3389/fmars.2017.00367},
	doi = {10.3389/fmars.2017.00367},
	abstract = {Empirical relationships between particulate organic carbon (POC) and inherent optical properties (IOPs) are required for estimating POC from ocean-color remote sensing and autonomous platforms. The main relationships studied are those between POC and particulate attenuation (cp) and backscattering (bbp) coefficients. The parameters of these relationships can however differ considerably due to differences in the methodologies applied for measuring IOPs and POC as well as variations in particle characteristics. Therefore, it is important to assess existing relationships and explore new optical proxies of POC. In this study, we evaluated empirical relationships between surface POC and IOPs (cp, bbp and the particulate absorption coefficient, ap) using an extensive dataset collected during two Atlantic Meridional Transect (AMT 19 and 22) cruises spanning a wide range of oceanographic regimes. IOPs and POC were measured during the two cruises using consistent methodologies. To independently assess the accuracy of the POC-IOPs relationships, we predicted surface POC for AMT-22 using relationships developed based on independent data from AMT-19. We found typical biases in predicting POC ranging between 2‚Äì3, 4‚Äì9, and 6‚Äì13\% for cp, bbp, and ap, respectively, and typical random uncertainties of 20‚Äì30\%. We conclude that (1) accurate POC-cp and POC-bbp relationships were obtained due to the consistent methodologies used to estimate POC and IOPs and (2) ap could be considered as an alternative optical proxy for POC in open-ocean waters, only if all physiological variability in the POC:chl ratio could be modeled and used to correct ap.},
	urldate = {2021-08-24},
	journal = {Frontiers in Marine Science},
	author = {Rasse, Rafael and Dall'Olmo, Giorgio and Graff, Jason and Westberry, Toby K. and van Dongen-Vogels, Virginie and Behrenfeld, Michael J.},
