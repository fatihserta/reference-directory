@article{goncalves-araujo_high_2018,
	title = {High colored dissolved organic matter ({CDOM}) absorption in surface waters of the central-eastern {Arctic} {Ocean}: {Implications} for biogeochemistry and ocean color algorithms},
	volume = {13},
	issn = {1932-6203},
	shorttitle = {High colored dissolved organic matter ({CDOM}) absorption in surface waters of the central-eastern {Arctic} {Ocean}},
