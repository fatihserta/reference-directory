@article{rossel_thermally_2017,
	title = {Thermally altered marine dissolved organic matter in hydrothermal fluids},
	volume = {110},
	issn = {0146-6380},
	url = {http://www.sciencedirect.com/science/article/pii/S0146638016302807},
