@article{stubbins_illuminating_2015,
	series = {Biogeochemistry of dissolved organic matter},
	title = {Illuminating the deep: {Molecular} signatures of photochemical alteration of dissolved organic matter from {North} {Atlantic} {Deep} {Water}},
