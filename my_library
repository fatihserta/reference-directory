@article{rossel_molecular_2020,
	title = {Molecular {Composition} of {Dissolved} {Organic} {Matter} in {Sediment} {Porewater} of the {Arctic} {Deep}-{Sea} {Observatory} {HAUSGARTEN} ({Fram} {Strait})},
