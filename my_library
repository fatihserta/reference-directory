@article{ohno_ultrahigh_2010,
	title = {Ultrahigh {Resolution} {Mass} {Spectrometry} and {Indicator} {Species} {Analysis} to {Identify} {Marker} {Components} of {Soil}- and {Plant} {Biomass}-{Derived} {Organic} {Matter} {Fractions}},
