@article{holm-hansen_chlorophyll_1978,
	title = {Chlorophyll a {Determination}: {Improvements} in {Methodology}},
	volume = {30},
	issn = {0030-1299},
	shorttitle = {Chlorophyll a {Determination}},
	url = {https://www.jstor.org/stable/3543338},
	doi = {10.2307/3543338},
	abstract = {Chlorophyll and phaeopigment determinations on fresh water and marine samples of phytoplankton have shown that the following considerations are important in routine pigment analyses. (a) Methanol should be used as extraction solvent instead of acetone due to better extraction efficiency, shorter extraction time, and elimination of the need to boil or homogenize the samples. (b) For spectrophotometric determinations of phaeopigments, the methanol extracts should be acidified with HCl to a final concentration of 3√ó 10$^{\textrm{-3}}$ M. (c) When a spectrophotometer is used for phaeopigment determination, subsequent neutralization of the acidified methanol extracts to the original pH is required; fluorometric determinations do not require this neutralization. (d) The addition of MgCO$_{\textrm{3}}$ to filters or to extracts is not necessary. (e) There is no detectable loss of chlorophyll when either sample extracts or wet filters are stored at -20¬∞C for three weeks and then extracted with either acetone or methanol. (f) Glass fiber filters are effective in retaining all phytoplankton and have some advantages over membrane filters. /// –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏—è —Å–æ–¥–µ—Ä–∂–∞–Ω–∏—è —Ö–ª–æ—Ä–æ—Ñ–∏–ª–ª–∞ –∏ —Ñ–µ–æ–ø–∏–≥–º–µ–Ω—Ç–∞ –≤ –ø—Ä–æ–±–∞—Ö –ø—Ä–µ—Å–Ω–æ–≤–æ–¥–Ω–æ–≥–æ –∏ –º–æ—Ä—Å–∫–æ–≥–æ —Ñ–∏—Ç–æ–ø–ª–∞–Ω–∫—Ç–æ–Ω–∞ –ø–æ–∫–∞–∑–∞–ª–∏, —á—Ç–æ –≤ —Å–∏—Å—Ç–µ–º–µ –∞–Ω–∞–ª–∏–∑–∞ –ø–∏–≥–º–µ–Ω—Ç–∞ –∏–º–µ—é—Ç –∑–Ω–∞—á–µ–Ω–∏–µ —Å–ª–µ–¥—É—é—â–∏–µ —Å–æ–æ–±—Ä–∞–∂–µ–Ω–∏—è: –∞/ –¥–ª—è —ç–∫—Å—Ç—Ä–∞–∫—Ü–∏–∏ —Å–ª–µ–¥—É–µ—Ç –∏—Å–ø–æ–ª—ä–∑–æ–≤–∞—Ç—ä –≤–º–µ—Å—Ç–æ –∞—Ü–µ—Ç–æ–Ω–∞ –º–µ—Ç–∞–Ω–æ–ª, –æ–±–ª–∞–¥–∞—é—â–∏–π –±–æ–ª–µ–µ –≤—ã—Å–æ–∫–æ–π —ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω–æ—Å—Ç—ä—é —ç–∫—Å—Ç—Ä–∞–∫—Ü–∏–∏, –±–æ–ª–µ–µ –∫–æ—Ä–æ—Ç–∫–æ–π –ø—Ä–æ–¥–æ–ª–∂–∏—Ç–µ–ª—ä–Ω–æ—Å—Ç—ä—é —ç–∫—Å—Ç—Ä–∞–∫—Ü–∏–∏, –Ω–µ —Ç—Ä–µ–±—É—é—â–µ–π –∫–∏–ø—è—á–µ–Ω–∏—è –∏–ª–∏ –≥–æ–º–æ–≥–µ–Ω–∏–∑–∞—Ü–∏–∏ –ø—Ä–æ–±; –±/ –¥–ª—è —Å–ø–µ–∫—Ç—Ä–æ—Ñ–æ—Ç–æ–º–µ—Ç—Ä–∏—á–µ—Å–∫–∏—Ö –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–π —Ñ–µ–æ–ø–∏–≥–º–µ–Ω—Ç–æ–≤ –º–µ—Ç–∞–Ω–æ–ª–æ