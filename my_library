@article{elovaara_contrasting_2021,
	title = {Contrasting patterns of carbon cycling and dissolved organic matter processing in two phytoplankton‚Äìbacteria communities},
	volume = {18},
	issn = {1726-4170},
	url = {https://bg.copernicus.org/articles/18/6589/2021/},
