@article{hawkes_efficient_2015,
	title = {Efficient removal of recalcitrant deep-ocean dissolved organic matter during hydrothermal circulation},
	volume = {8},
	copyright = {2015 Nature Publishing Group},
	issn = {1752-0908},
	url = {https://www.nature.com/articles/ngeo2543},
	doi = {10.1038/ngeo2543},
	abstract = {Oceanic dissolved organic carbon (DOC) is an important carbon pool, similar in magnitude to atmospheric CO2, but the fate of its oldest forms is not well understood1,2. Hot hydrothermal circulation may facilitate the degradation of otherwise un-reactive dissolved organic matter, playing an important role in the long-term global carbon cycle. The oldest, most recalcitrant forms of DOC, which make up most of oceanic DOC, can be recovered by solid-phase extraction. Here we present measurements of solid-phase extractable DOC from samples collected between 2009 and 2013 at seven vent sites in the Atlantic, Pacific and Southern oceans, along with magnesium concentrations, a conservative tracer of water circulation through hydrothermal systems. We find that magnesium and solid-phase extractable DOC concentrations are correlated, suggesting that solid-phase extractable DOC is almost entirely lost from solution through mineralization or deposition during circulation through hydrothermal vents with fluid temperatures of 212‚Äì401 ¬∞C. In laboratory experiments, where we heated samples to 380 ¬∞C for four days, we found a similar removal efficiency. We conclude that thermal degradation alone can account for the loss of solid-phase extractable DOC in natural hydrothermal systems, and that its maximum lifetime is constrained by the timescale of hydrothermal cycling, at about 40 million years3.},
	language = {en},
	number = {11},
	urldate = {2019-11-14},
	journal = {Nature Geoscience},
	author = {Hawkes, Jeffrey A. and Rossel, Pamela E. and Stubbins, Aron and Butterfield, David and Connelly, Douglas P. and Achterberg, Eric P. and Koschinsky, Andrea and Chavagnac, Val√©rie and Hansen, Christian T. and Bach, Wolfgang and Dittmar, Thorsten},
	month = nov,
	year = {2015},
	pages = {856--860},
	file = {Hawkes et al_2015_Efficient removal of recalcitrant deep-ocean dissolved organic matter during.pdf:C\:\\Users\\mse041\\Zotero\\storage\\76F7X4F2\\Hawkes et al_2015_Efficient removal of recalcitrant deep-ocean dissolved organic matter during.pdf:application/pdf;Snapshot:C\:\\Users\\mse041\\Zotero\\storage\\R49VHUUI\\ngeo2543.html:text/html},
