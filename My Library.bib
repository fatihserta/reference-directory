	author = {Alemán Bañón, José and Rothman, Jason},
	month = nov,
	year = {2016},
	note = {Publisher: Routledge
\_eprint: https://doi.org/10.1080/23273798.2016.1218032},
	keywords = {P600, agreement, markedness, number and gender},
	pages = {1273--1298},
	file = {Alemán Bañón_Rothman_2016_The role of morphological markedness in the processing of number and gender.pdf:C\:\\Users\\mse041\\Zotero\\storage\\7376VPAH\\Alemán Bañón_Rothman_2016_The role of morphological markedness in the processing of number and gender.pdf:application/pdf},
