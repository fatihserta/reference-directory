	file = {Rodrigues et al_undefineded_ORIGIN AND ALTERATION OF ORGANIC MATTER IN HYDRATE-BEARING SEDIMENTS OF THE RIO.pdf:C\:\\Users\\mse041\\Zotero\\storage\\XZLS3K2H\\Rodrigues et al_undefineded_ORIGIN AND ALTERATION OF ORGANIC MATTER IN HYDRATE-BEARING SEDIMENTS OF THE RIO.pdf:application/pdf;Snapshot:C\:\\Users\\mse041\\Zotero\\storage\\CNHWVFIB\\core-reader.html:text/html},
