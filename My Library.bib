	author = {Platt, Stephen M. and Eckhardt, Sabine and Ferré, Benedicte and Fisher, Rebecca E. and Hermansen, Ove and Jansson, Pär and Lowry, David and Nisbet, Euan G. and Pisso, Ignacio and Schmidbauer, Norbert and Silyakova, Anna and Stohl, Andreas and Svendby, Tove M. and Vadakkepuliyambatta, Sunil and Mienert, Jürgen and Lund Myhre, Cathrine},
