	journal = {Geosci. Model Dev.},
	author = {Raivonen, M. and Smolander, S. and Backman, L. and Susiluoto, J. and Aalto, T. and Markkanen, T. and Mäkelä, J. and Rinne, J. and Peltola, O. and Aurela, M. and Lohila, A. and Tomasic, M. and Li, X. and Larmola, T. and Juutinen, S. and Tuittila, E.-S. and Heimann, M. and Sevanto, S. and Kleinen, T. and Brovkin, V. and Vesala, T.},
