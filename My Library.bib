@article{ogawa_production_2001,
	title = {Production of {Refractory} {Dissolved} {Organic} {Matter} by {Bacteria}},
	volume = {292},
	issn = {0036-8075, 1095-9203},
	url = {https://www.science.org/doi/10.1126/science.1057627},
