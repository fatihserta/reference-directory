	author = {Rossel, Pamela E. and Bienhold, Christina and Hehemann, Laura and Dittmar, Thorsten and Boetius, Antje},
	year = {2020},
	note = {Publisher: Frontiers},
	keywords = {Arctic Ocean, benthic communities, dissolved orgaic matter (DOM), Fourier-transform ion cyclotron resonance mass spectrometry (FT-ICR-MS), Porewater},
