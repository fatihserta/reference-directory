	title = {Illuminating the deep: {Molecular} signatures of photochemical alteration of dissolved organic matter from {North} {Atlantic} {Deep} {Water}},
	volume = {177, Part 2},
	issn = {0304-4203},
	shorttitle = {Illuminating the deep},
	url = {http://www.sciencedirect.com/science/article/pii/S0304420315300050},
	doi = {10.1016/j.marchem.2015.06.020},
	abstract = {Duplicate, filtered samples of North Atlantic Deep Water (NADW) were irradiated for 28 days in a solar simulator. Duplicate dark controls were placed alongside the irradiated samples. After 28 days, samples were extensively photo-degraded based upon colored dissolved organic matter (CDOM) photo-bleaching (\&gt; 95\%). Samples were solid phase extracted using PPL resin to isolate, concentrate and desalt the dissolved organic matter (DOM) in the samples. Ultrahigh resolution electrospray ionization Fourier transform ion cyclotron resonance mass spectrometry (FTICR-MS) enabled 3024 molecular formulas to be identified in the dark control. Photo-degradation decreased molecular diversity, with 2402 formulas assigned post-irradiation. Molecular formulas were classified based upon their photo-lability as 1) photo-resistant; 2) photo-labile; and, 3) photo-produced. Photo-resistant DOM made up 73\% of all formulas and was dominated by highly unsaturated molecular signatures consistent with carboxylic-rich alicyclic molecules, suggesting that these apparently bio-refractory compounds may also survive multiple passages through sunlit surface waters and thus accumulate for timeframes exceeding ocean ventilation. Photo-labile DOM was enriched in low molecular weight formulas, aromatic molecular formulas, and sulfur and phosphorous containing formulas. Compounds containing both sulfur and nitrogen were particularly photo-labile and may represent an underappreciated component of the photo-reactive CDOM pool. Photo-produced DOM was enriched in higher molecular weight formulas, as well as aliphatic and peptide formulas. Molecular formulas are indexed by their photo-lability classification in the supplementary information.},
	urldate = {2017-04-16},
	journal = {Marine Chemistry},
	author = {Stubbins, Aron and Dittmar, Thorsten},
	month = dec,
	year = {2015},
	keywords = {Dissolved organic carbon, FTICR-MS, Photo-degradation, North Atlantic Deep Water, Aromatic},
	pages = {318--324},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\mse041\\Zotero\\storage\\2E96G9TH\\Stubbins and Dittmar - 2015 - Illuminating the deep Molecular signatures of pho.pdf:application/pdf;ScienceDirect Full Text PDF:C\:\\Users\\mse041\\Zotero\\storage\\SZPPMLUT\\Stubbins and Dittmar - 2015 - Illuminating the deep Molecular signatures of pho.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\mse041\\Zotero\\storage\\PQJEUUM4\\S0304420315300050.html:text/html;ScienceDirect Snapshot:C\:\\Users\\mse041\\Zotero\\storage\\ZHCZDTJR\\S0304420315300050.html:text/html},
}

@article{wear_roles_2015,
	series = {Biogeochemistry of dissolved organic matter},
	title = {Roles of diatom nutrient stress and species identity in determining the short- and long-term bioavailability of diatom exudates to bacterioplankton},
	volume = {177, Part 2},
	issn = {0304-4203},
	url = {http://www.sciencedirect.com/science/article/pii/S0304420315300396},
	doi = {10.1016/j.marchem.2015.09.001},
	abstract = {Phytoplankton exude carbon-rich dissolved organic matter (DOM) upon nutrient stress, yet the ecological role of this exudate in stimulating bacterial growth is not well understood. We harvested DOM produced by four coastal diatoms (Skeletonema marinoi, Chaetoceros socialis, Thalassiosira weissflogii, and Odontella aurita) subjected to depletion of nitrogen (N), silicon (Si), or N + Si simultaneously in batch culture and assessed its bioavailability to natural bacterioplankton communities using dilution batch-culture remineralization bioassays. Short-term, ecologically-relevant responses were affected both by diatom source species and by the nutrient stress under which the DOM was produced. Si-stress DOM was generally more bioavailable over the first week than that produced under N or N + Si stress, and led to higher bacterial growth efficiencies. In contrast, the amount of diatom-derived total organic carbon (TOC) that persisted over months in the same experiments differed among source diatom species, with no evidence of a nutrient stress effect. These results nuance the carbon overflow hypothesis of DOM release, which has been suggested to be maladaptive due to the possibility of DOC release allowing bacterioplankton to better compete for the same nutrient that is limiting the phytoplankton. Our results suggest that bacterial activity is most promoted when diatoms are limited by Si, a nutrient that is not subject to competition with bacteria. They imply that the identity of the nutrient that terminates a diatom bloom impacts heterotrophic activity in the short term; however, source diatom species has the greater influence on DOC persistence in surface waters and its potential export from the system.},
	urldate = {2017-04-16},
	journal = {Marine Chemistry},
	author = {Wear, Emma K. and Carlson, Craig A. and Windecker, Laura A. and Brzezinski, Mark A.},
	month = dec,
	year = {2015},
	keywords = {Dissolved organic carbon, Diatoms, Nutrient stress, Bacterioplankton},
	pages = {335--348},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\mse041\\Zotero\\storage\\5DF2HNQX\\Wear et al. - 2015 - Roles of diatom nutrient stress and species identi.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\mse041\\Zotero\\storage\\T6UU86PG\\S0304420315300396.html:text/html},
}

@article{longnecker_environmental_2015,
