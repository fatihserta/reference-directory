	journal = {Deep Sea Research Part II: Topical Studies in Oceanography},
	author = {Tynan, Eithne and Clarke, Jennifer S. and Humphreys, Matthew P. and Ribas-Ribas, Mariana and Esposito, Mario and Rérolle, Victoire M. C. and Schlosser, C. and Thorpe, Sally E. and Tyrrell, Toby and Achterberg, Eric P.},
	month = may,
