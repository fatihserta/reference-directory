@article{riedel_method_2014,
	title = {A {Method} {Detection} {Limit} for the {Analysis} of {Natural} {Organic} {Matter} via {Fourier} {Transform} {Ion} {Cyclotron} {Resonance} {Mass} {Spectrometry}},
	volume = {86},
