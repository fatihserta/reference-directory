	journal = {Marine Chemistry},
	author = {Liu, Shuting and Liu, Zhanfei},
	month = dec,
	year = {2015},
	keywords = {Plain peptide, Peptide analog, Hydrolysis, Salinity, Bacterial community structure, Mississippi River plume, Gulf of Mexico},
	pages = {398--407},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\mse041\\Zotero\\storage\\M65NAIFU\\Liu and Liu - 2015 - Comparing extracellular enzymatic hydrolysis betwe.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\mse041\\Zotero\\storage\\29I6BSDG\\S0304420315300062.html:text/html},
