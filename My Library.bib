	journal = {Continental Shelf Research},
	author = {Mau, Susan and Heintz, Monica B. and Valentine, David L.},
	month = jan,
	year = {2012},
	keywords = {Methane budget, Methane plume, Methane sinks, Methane transport, Santa Barbara Channel, Water column},
