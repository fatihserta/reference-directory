@article{hertkorn_supplementary_2013,
	title = {Supplementary - {High}-field {NMR} spectroscopy and {FTICR} mass spectrometry: powerful discovery tools for the molecular level characterization of marine dissolved organic matter},
	volume = {10},
	issn = {1726-4189},
