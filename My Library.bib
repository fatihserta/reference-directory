	keywords = {Sediment, Cold seeps, Ribosomal RNA, Sequence databases, Bacteria, Stomach, Crabs, Biomass (ecology)},
	pages = {e74894},
	file = {Full Text PDF:C\:\\Users\\mse041\\Zotero\\storage\\3876647C\\Niemann et al. - 2013 - Methane-Carbon Flow into the Benthic Food Web at C.pdf:application/pdf;Snapshot:C\:\\Users\\mse041\\Zotero\\storage\\Q2GSIB53\\article.html:text/html},
