@article{ward_compositional_2015,
	series = {Biogeochemistry of dissolved organic matter},
	title = {The compositional evolution of dissolved and particulate organic matter along the lower {Amazon} {River}—Óbidos to the ocean},
	volume = {177, Part 2},
