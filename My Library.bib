@article{kark_ecotones_2006,
	title = {Ecotones: {Marginal} or {Central} {Areas} of {Transition}?},
	volume = {52},
	issn = {1565-9801},
	shorttitle = {Ecotones},
	url = {https://doi.org/10.1560/IJEE.52.1.29},
