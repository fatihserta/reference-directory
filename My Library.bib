	author = {Phungsai, Phanwatt and Kurisu, Futoshi and Kasuga, Ikuro and Furumai, Hiroaki},
	month = jan,
	year = {2021},
	keywords = {Dissolved organic matter, DOM fractionation, Molecular characteristics, Orbitrap mass spectrometry, Unknown screening analysis},
