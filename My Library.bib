	file = {Full Text PDF:C\:\\Users\\mse041\\Zotero\\storage\\Q7AYWK9W\\James et al. - 2016 - Effects of climate change on methane emissions fro.pdf:application/pdf;Snapshot:C\:\\Users\\mse041\\Zotero\\storage\\EJ2RQ9L6\\lno.html:text/html},
