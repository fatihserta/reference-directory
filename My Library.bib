	keywords = {Metabolomics, Data analysis, Database design},
	pages = {366--373},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\mse041\\Zotero\\storage\\6NTG2NF2\\Longnecker et al. - 2015 - Environmental metabolomics Databases and tools fo.pdf:application/pdf;ScienceDirect Full Text PDF:C\:\\Users\\mse041\\Zotero\\storage\\VICXEPXZ\\Longnecker et al. - 2015 - Environmental metabolomics Databases and tools fo.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\mse041\\Zotero\\storage\\4N54MFC6\\S0304420315001279.html:text/html;ScienceDirect Snapshot:C\:\\Users\\mse041\\Zotero\\storage\\MBSDAW2H\\S0304420315001279.html:text/html},
