@article{fox_composition_2018,
	title = {Composition of {Dissolved} {Organic} {Matter} in {Pore} {Waters} of {Anoxic} {Marine} {Sediments} {Analyzed} by {1H} {Nuclear} {Magnetic} {Resonance} {Spectroscopy}},
	volume = {5},
