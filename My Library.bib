	year = {2003},
	doi = {10.1007/978-3-662-05127-6_28},
	keywords = {Anaerobic Methane Oxidation, Anaerobic Oxidation, Ether Lipid, Methane Seep, Methanogenic Archaea},
	pages = {457--477},
}

